@import 'shared.mixin'


.root
  SIDEBAR_WIDTH = 220px

  .sidebar-outer
    background-color #FAFCFC
    border-right solid 1px rgba(0, 0, 0, 0.03)
    position absolute
    left 0px
    top 0px
    bottom 0px
    width SIDEBAR_WIDTH
    @media NARROW
      display none


  .main-outer
    padding-top 30px
    padding-left SIDEBAR_WIDTH + 1
    @media NARROW
      padding-left 0
    .main-centered
      position relative
      max-width 760px
      margin 0 auto
      padding-left 30px
      padding-right 30px
