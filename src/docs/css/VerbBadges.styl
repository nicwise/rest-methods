@import 'shared.mixin'


.verb-badges
  display inline-block
  cursor default

  .verb
    display inline-block
    background-color rgba(0, 0, 0, 0.5)
    border-radius 3px
    width 56px
    color white
    font-weight 700
    font-size 12px
    line-height 12px
    text-align center
    padding 3px 0
    margin-right 3px
    opacity 0.1 // Not supported

    &.is-supported
      background-color #6B9DE3 // Blue
      opacity 1
